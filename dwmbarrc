#!/bin/bash

# Example file, designed to be edited.

DELAY=5
MODULES_DIR="modules/"
SEPARATOR=" | "

MODULES="wifi internet bluetooth volume temperature date time battery"

run_modules(){
	for module in $MODULES; do
		[[ ! "$OUTPUT" = "" ]] && OUTPUT="$OUTPUT$SEPARATOR"
		OUTPUT="$OUTPUT$(exec $MODULES_DIR$module)"
	done
}

run(){
	run_modules
	echo $OUTPUT
	sleep $DELAY;
}

run
